@model Shop.ModelArea.Models.VModel.ModelTypeVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>ModelType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.ModelType.Name" class="control-label"></label>
                <input asp-for="@Model.ModelType.Name" class="form-control" />
                <span asp-validation-for="@Model.ModelType.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ModelType.BrandTypeId" class="control-label"></label>
                <select asp-for="@Model.ModelType.BrandTypeId" class="form-control" asp-items="@Model.BrandTypeList"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
